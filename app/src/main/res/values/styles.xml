<resources>

    <!-- Base application theme. -->
    <style name="DefaultTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRedMaterial</item>
        <item name="colorPrimaryDark">@color/colorRedMaterial</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorRedMaterial</item>

        <item name="primaryColorToolbar">@color/colorRedMaterial</item>
        <item name="tabIndColor">@color/colorRedMaterial</item>
        <item name="backgroundColor">@color/colorWhite</item>
        <item name="textColorPrimary">@color/colorBlack</item>


    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorWhite</item>

        <item name="primaryColorToolbar">@color/colorBlack</item>
        <item name="tabIndColor">@color/colorGrayMaterial</item>
        <item name="backgroundColor">@color/colorBlack</item>
        <item name="textColorPrimary">@color/colorWhite</item>

    </style>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorRedMaterial</item>
    </style>

    <style name="CustomNotificationSubtitleStyle" parent="TextAppearance.Compat.Notification.Line2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="list_item_category">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor"></item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="imagebutton">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:background">@drawable/selector_background_play_button</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/primaryColorToolbar</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

</resources>
